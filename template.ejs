<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <span class="navbar-brand"><%= title %></span>
            <form class="navbar-form navbar-right">
                <div class="form-group">
                    <input type="search" id="jets-search" class="form-control" placeholder="Search...">
                </div>
            </form>
        </div>
    </nav>

    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Path</th>
                <th>Methods</th>
            </tr>
            </thead>
            <tbody id="jets-content">
                <% if (routes.length > 0) { %>
                    <% routes.forEach(function(item) { %>
                        <tr>
                            <td class="col-md-6"><%= item.path %></td>
                            <td class="col-md-6 text-uppercase"><%= item.methods.join(', ') %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr class="info">
                        <td colspan="2" class="text-center"><h4>No routes defined...</h4></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Jets CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jets/0.11.0/jets.min.js"></script>
    <script>
        var jets = new Jets({
            searchTag: '#jets-search',
            contentTag: '#jets-content'
        });
    </script>
</body>
</html>
